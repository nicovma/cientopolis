<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Cientifico a cargo"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Aca se debe ingresar el texto con la descripcion del proyecto"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hitos"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Aca se deben mostrar los hitos del proyecto"
        android:textAlignment="center"
        android:textSize="16dp" />



    <Button
        android:layout_width="200dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/join_project"
        android:text="Participar"/>
</LinearLayout>